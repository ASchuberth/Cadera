{
    "version": 6,
    "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
    },

    "configurePresets": [
    {
        "name": "ninja-multi-vcpkg",
        "inherits": "default",
        "displayName": "Ninja Multi-Cvcpkg",
